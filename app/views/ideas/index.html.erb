
  <div >
    <% @ideas.each do |idea| %>

        <div class = "index">
          <h5> <%= link_to idea.title, idea %></h5>
          <p> <%= truncate idea.body, length:100 %></p>
          <small> By <%= idea.user.first_name %> </small>
          <small class = 'likes'>Likes: <%= idea.likes.count %> </small>
          
          <small>
             <% if @like.present? %>
                <%= button_to "Unlike", like_path(@like), method: :delete, class:"btn btn-outline-primary" %>
             <% else %>
                <%= button_to "Like", idea_likes_path(idea), method: :post, class:"btn btn-outline-primary" %>
                <% end %>
          </small>
        </div>

             <%# if can? :crud, @idea %>
             

                   
             

             <%# end %>

        <br>

        <% end %>
    </div>
